"appearance stuff
filetype plugin indent on
colorscheme mustang
syntax on
set title

"tab stuff
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

"search stuff
set ignorecase
set smartcase
set hlsearch
set splitright

set ruler
set showcmd

set guioptions-=m
set guioptions-=T

set hidden
set nowrap

set pastetoggle=<F2>

